<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ siteName }}</title>
        <link>http://{{ siteUrl }}</link>
        <atom:link href="{{ siteUrl }}rss" rel="self" type="application/rss+xml" />
        <description>{{ globals.siteDescription }}</description>
        <language>en-us</language>
        <pubDate>{{ now|rss }}</pubDate>
        <lastBuildDate>{{ now|rss }}</lastBuildDate>
        {% set entries = craft.entries.section('blog').all() %}
        {% for entry in entries %}
            <item>
                <title>{{ entry.title }}</title>
                <link>http://{{ entry.url }}</link>
                <pubDate>{{ entry.postDate|rss }}</pubDate>
                <author>josh@brandishinsights.com (Josh Braaten)</author>
                <guid>http://{{ entry.url }}</guid>
                <description><![CDATA[
                    {{ entry.blogEntryDescription }}
                    ]]></description>
            </item>
        {% endfor %}
    </channel>
</rss>