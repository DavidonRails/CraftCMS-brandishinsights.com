{% extends "_layouts/base" %} 
{% block shrink %} 
    shrink shrink2 
{% endblock %} 
{% block title %} 
{{ entry.title }} | Brandish Insights 
{% endblock %} 

{% block schema %}
{% set image = entry.featuredImage.one() %}
        {% if image %}
            {% set imageurl = 'https:' ~ image.url %}
        {% else %}
            {% set imageurl = 'none' %}
        {% endif %}
        <meta property="og:type" content="article">
        <meta property="og:title" content="{{ entry.title }}">
        <meta property="og:site_name" content="https://www.brandishinsights.com">
        <meta property="og:description" content="{{ entry.blogEntryDescription }}">
        <meta property="og:image" content="{{ imageurl }}">
        <meta property="og:url" content="{{ entry.getUrl() }}">
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "image": [
    "{{ imageurl }}"
  ],
  "datePublished": "{{ entry.postDate | date('Y-m-d') }}",
  "dateModified": "{{ entry.dateUpdated | date('Y-m-d') }}",
  "headline": "{{ entry.title }}",
  "publisher": {
      "@type": "Organization",
      "name": "Brandish Insights",
      "logo": {
          "@type": "ImageObject",
          "url": "https://www.brandishinsights.com/assets/images/logo-light.png"
      }
  },
  "description": "{{ entry.blogEntryDescription }}",
  "author": {
      "@type": "Person",
      "name": "Josh Braaten"
  },
  "mainEntityOfPage": "{{ entry.getUrl() }}"

}
</script>
{% endblock %}

