{% set relatedArticles = entry.relatedArticles %}
{% set idsToExclude = ['and'] %} 
<div class="related-posts text-center">
    <div class="container">
            <h3 class="title">You May Also Like:</h3>
            <div class="row">
                {% for related in relatedArticles %}
                    <div class="item col-12 col-md-4 tw-flex">
                        <div class="inner">
                                {% set image = related.featuredImage.one() %}
                                {% if image %}
                                {% set transformedImage = craft.imager.transformImage(image,
                                        { width: 350, webpImagickOptions: { lossless: 'true', method: '1' } }
                                    ) %}
                            <div class="figure-holder">
                                <a href="{{ related.url }}"><img class="img-fluid" src="{{ transformedImage.url }}" alt=""></a>
                            </div>
                            {% endif %}
                            <div class="content">
                                <h3 class="title"><a href="{{ related.url }}">{{ related.title }}</a></h3>
                                <div class="intro">
                                    {{ related.blogEntryDescription }}
                                </div><!--//intro-->
                            </div><!--//content-->
                        </div><!--//inner-->
                    </div><!--//item-->
                    {% set idsToExclude = idsToExclude|merge([related.id]) %}  
                {% endfor %}
                {% set idsToExclude = idsToExclude|merge([entry.id]) %} 
                {% set idsToExcludeString = idsToExclude|join(', not ') %}
                {% set relatedLimit = 3 - relatedArticles | length %}
                {% if relatedArticles | length < 3 %}
                    {% set relatedEntries = craft.entries.relatedTo(entry.blogCategory).id(idsToExcludeString).limit(relatedLimit) %}
                    {% for related in relatedEntries %}
                        <div class="item col-12 col-md-4 tw-flex">
                            <div class="inner">
                                    {% set image = related.featuredImage.one() %}
                                    {% if image %}
                                    {% set transformedImage = craft.imager.transformImage(image,
                                        { width: 350, webpImagickOptions: { lossless: 'true', method: '1' } }
                                    ) %}
                                <div class="figure-holder">
                                    <a href="{{ related.url }}"><img class="img-fluid" src="{{ transformedImage.url }}" alt=""></a>
                                </div>
                                {% endif %}
                                <div class="content">
                                    <h3 class="title"><a href="{{ related.url }}">{{ related.title }}</a></h3>
                                    <div class="intro">
                                        {{ related.blogEntryDescription }}
                                    </div><!--//intro-->
                                </div><!--//content-->
                            </div><!--//inner-->
                        </div><!--//item-->
                    {% endfor %}
                {% endif %}
            </div><!--//row-->
    </div><!--//container-->
</div>
{% endblock %} 
{% block scripts %}
<script src="/assets/js/focuspoint.js"></script>
<script>
    (function () {

        function Scrollify() {

            var line = document.querySelector(".scroll-line"),
                scrollpos = window.pageYOffset,
                docheight2 = document.body.clientHeight,
                docheight = $('#disqus_thread').offset().top,
                winheight = window.outerHeight,
                scrolled = (scrollpos / (docheight - winheight)) * 100;

            line.style.width = (scrolled + '%');
        }

        window.addEventListener("scroll", Scrollify);
        {% set image = entry.featuredImage.one() %}
        {% if image %}
        
        var featuredImage = '{{ image.url }}';
        $('.blog-single-page .hero-holder').css('background-image', 'url('+featuredImage+')');
        {% endif %}
    })();
</script>
{% endblock %}