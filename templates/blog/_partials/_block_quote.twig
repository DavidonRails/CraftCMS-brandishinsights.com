<blockquote class="blog-quote tw-pb-12">
    <svg class="svg-inline--fa fa-quote-left tw-w-6 tw-h-6" aria-hidden="true" data-prefix="fas" data-icon="quote-left" role="img"
        xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg="">
        <path d="M464 256h-80v-64c0-35.3 28.7-64 64-64h8c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24h-8c-88.4 0-160 71.6-160 160v240c0 26.5 21.5 48 48 48h128c26.5 0 48-21.5 48-48V304c0-26.5-21.5-48-48-48zm-288 0H96v-64c0-35.3 28.7-64 64-64h8c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24h-8C71.6 32 0 103.6 0 192v240c0 26.5 21.5 48 48 48h128c26.5 0 48-21.5 48-48V304c0-26.5-21.5-48-48-48z"></path>
    </svg>
    <p>{{ block.quote }}</p>
    {% if block.clickToTweet | length %}
    <div class="quote-tweet text-center">
        <a href="{{ block.clickToTweet }}" target="_New" class="tw-text-blue-light">
            <svg class="svg-inline--fa fa-twitter fa-w-16 tw-w-32" aria-hidden="true" data-prefix="fab" data-icon="twitter" role="img"
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg="">
                <path d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"></path>
            </svg>
            <!-- <i class="fab fa-twitter" aria-hidden="true"></i> -->Tweet</a>
    </div>
    {% endif %}
</blockquote>
<div class="tw-pb-12 tw-flex tw-self-center">
    {% if block.pictureLink | length %}
    <div class="tw-w-24 tw-h-24">
        {% set pictureLink = block.pictureLink %}
        {% set transformedImage = craft.imager.transformImage(pictureLink,
            { width: 100, webpImagickOptions: { lossless: 'true', method: '1' } }
        ) %}
        <img src="{{ transformedImage.url }}" class="tw-rounded-full" />
    </div>
    {% endif %}
    <div class="tw-flex tw-self-center tw-pl-8">
        {% if block.quoter | length %} {{ block.quoter }} {% endif %} {% if block.jobTitle | length %} &nbsp;-&nbsp; {% if block.linkedin | length %}
        <a href="{{ block.linkedin }}" target="_blank">{{ block.jobTitle }}</a>
        {% endif %} {% endif %}
    </div>
</div>